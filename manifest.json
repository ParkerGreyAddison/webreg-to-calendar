{
    "name": "Webreg to Calendar",
    "description": "Converts a UCSD course schedule to a calendar file that can be imported into Google Calendars.  Works from the WebReg main page and from the MyTritonlink main page.",
    "version": "1.0",
    "homepage_url": "https://github.com/parkergreyaddison/webreg-to-calendar/tree/master",
    "manifest_version": 2,

    "icons": {
        "64": "ucsd.svg"
    },

    "permissions": [
        "activeTab"
    ],

    "browser_action": {
        "browser_style": true,
        "default_icon": "ucsd.svg"
    },

    "background": {
        "scripts": ["background.js"]
    },

    "content_scripts": [
        {
            "matches": ["*://act.ucsd.edu/myTritonlink20/display.htm"],
            "js": ["content_scripts/tritonlink.js"]
        },
        {
            "matches": ["*://act.ucsd.edu/webreg2/main*"],
            "js": ["/content_scripts/webreg.js"]
        }
    ]
}